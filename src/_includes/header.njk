<header>
    <span class="header__title">
        <img src="public/images/ss_advertising_logo.png" alt="SurfScape Advertising Logo">
        <div>
            <span class="page__title">{{ site.title }}</span>
        </div>
    </span>
    <nav>
        {%- for siteNav in nav.siteNav -%}
            <a href="{{ siteNav.url }}" {% if siteNav.active %}{% else %} {% if (siteNav.url != "/" and page.url.startsWith(siteNav.url)) or page.url == siteNav.url %}aria-current="page"{% endif %}{% endif %}>{{ siteNav.title }}</a>
        {%- endfor -%}

    </nav>
</header>